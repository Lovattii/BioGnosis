<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_top_bordas_radius"
    android:backgroundTint="@color/verde_clarin"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/lineCad"
        android:layout_width="60dp"
        android:layout_height="6dp"
        android:layout_marginVertical="10dp"
        android:layout_marginBottom="20dp"
        app:cardBackgroundColor="@color/white"
        app:strokeWidth="0dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="3dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerCad"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        app:shimmer_auto_start="true"
        android:visibility="visible"

        app:layout_constraintTop_toBottomOf="@id/lineCad"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/barra_fundoCad">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <include layout="@layout/shimmer_efect_cadrastation" />
            <include layout="@layout/shimmer_efect_cadrastation" />
            <include layout="@layout/shimmer_efect_cadrastation" />
            <include layout="@layout/shimmer_efect_cadrastation" />
            <include layout="@layout/shimmer_efect_cadrastation" />
            <include layout="@layout/shimmer_efect_cadrastation" />
        </LinearLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerCad"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:visibility="gone"

        app:layout_constraintTop_toBottomOf="@id/lineCad"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/barra_fundoCad"/>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/barra_fundoCad"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="0dp"
        app:strokeWidth="0dp"
        app:cardBackgroundColor="@color/verde_alert"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" >

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center" >

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/cinza"
                android:fontFamily="@font/righteous_regular"
                android:text="Escolha uma espÃ©cie de planta!"
                android:textAlignment="center"/>


            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardBtnProsseguir"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:visibility="invisible"
                app:cardBackgroundColor="@color/verde_clarin"
                app:strokeColor="@color/verde_esc_dif"
                app:cardCornerRadius="30dp"> <Button
            android:id="@+id/btnProsseguir"
            android:background="@android:color/transparent"
            android:padding="0dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/righteous_regular"
            android:textSize="18sp"
            android:text="PROSSEGUIR"
            android:layout_gravity="center"
            android:textColor="@color/verde_esc_dif"
            android:textAlignment="center" />
            </com.google.android.material.card.MaterialCardView>


            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>