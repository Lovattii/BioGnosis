<androidx.cardview.widget.CardView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
app:cardBackgroundColor="@android:color/transparent"
android:clipChildren="false"
android:clipToPadding="false"
app:cardElevation="0dp"
app:cardMaxElevation="0dp">

<FrameLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:padding="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <View
            android:id="@+id/fundo_verde"
            android:layout_width="360dp"
            android:layout_height="80dp"
            android:background="@drawable/fundo_retangular_verde"
            android:backgroundTint="@color/verde_claro"
            app:layout_constraintStart_toStartOf="@id/layout_semente"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <FrameLayout
            android:id="@+id/layout_semente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/semente"
                android:layout_width="101dp"
                android:layout_height="101dp"
                android:layout_gravity="center"
                android:background="@null"
                android:src="@drawable/sements"/>


            <com.example.pincel.Ring
                android:id="@+id/ring_temperature"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                app:bfm_progressWidth="5dp"
                app:bfm_backgroundWidth="5dp"
                app:bfm_progress="0" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="@id/layout_semente"
            app:layout_constraintBottom_toBottomOf="@id/layout_semente"
            app:layout_constraintStart_toStartOf="@id/layout_semente"
            app:layout_constraintEnd_toEndOf="@id/layout_semente">

            <TextView
                android:id="@+id/plant_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="50sp"
                android:text="18"
                android:fontFamily="@font/righteous_regular"
                android:textColor="@color/white"
                android:textAlignment="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:fontFamily="@font/righteous_regular"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:text="DIAS"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:gravity="center"
            android:clipChildren="false"
            android:clipToPadding="false"
            app:layout_constraintBottom_toBottomOf="@id/fundo_verde"
            app:layout_constraintTop_toTopOf="@id/fundo_verde"
            app:layout_constraintStart_toEndOf="@id/layout_semente"
            app:layout_constraintEnd_toEndOf="@id/fundo_verde"
            android:layout_marginEnd="10dp">

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <include
                android:id="@+id/barra_sol"
                layout="@layout/game_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <include
                android:id="@+id/barra_gota"
                layout="@layout/game_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/shape_circle"
        android:backgroundTint="@color/verde_ult_forte"
        android:layout_gravity="top"
        > <ImageView
            android:id="@+id/termometro"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_termometro" />

    </FrameLayout>

</FrameLayout>
</androidx.cardview.widget.CardView>