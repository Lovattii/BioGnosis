<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProcessFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/verde_main" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/txtNameProcess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ALFA"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="24sp"
                android:fontFamily="@font/righteous_regular"
                android:layout_margin="20dp" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/estatisticasPlant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="@color/cinza"
                android:layout_margin="30dp"
                app:strokeWidth="0dp"

                app:layout_constraintTop_toBottomOf="@id/txtNameProcess"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <FrameLayout
                        android:id="@+id/groupPlantProcess"
                        android:layout_width="130dp"
                        android:layout_height="145dp"
                        android:layout_margin="20dp"

                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:src="@drawable/shape_ellipse"
                            android:tint="@color/cinza_escuro"
                            android:layout_gravity="bottom" />

                        <ImageView
                            android:id="@+id/imagePlantProcess"
                            android:layout_width="130dp"
                            android:layout_height="130dp"
                            android:src="@drawable/central_alface"
                            android:layout_gravity="top"/>

                    </FrameLayout>

                    <View
                        android:id="@+id/guideLineStart"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"

                        app:layout_constraintStart_toEndOf="@id/groupPlantProcess"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginStart="20dp"
                        />

                    <View
                        android:id="@+id/guideLineEnd"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"

                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginEnd="20dp" />

                    <TextView
                        android:id="@+id/txtVariaveis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="N° de dias\n\nN° de vezes irrigadas\n\nN° de quase morte\n\nPontos de vida"
                        android:textAlignment="textStart"
                        android:textSize="12sp"
                        android:fontFamily="@font/righteous_regular"
                        android:textColor="@color/black"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@id/guideLineStart"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="end"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@id/guideLineEnd">

                        <TextView
                            android:id="@+id/txt1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:textColor="@color/black"
                            android:text="15"
                            android:textAlignment="textEnd"
                            android:textSize="12sp"
                            android:fontFamily="@font/righteous_regular" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:fontFamily="@font/righteous_regular" />

                        <TextView
                            android:id="@+id/txt2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:textColor="@color/black"
                            android:text="18"
                            android:textAlignment="textEnd"
                            android:textSize="12sp"
                            android:fontFamily="@font/righteous_regular" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:fontFamily="@font/righteous_regular" />

                        <TextView
                            android:id="@+id/txt3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:textColor="@color/black"
                            android:text="20"
                            android:textAlignment="textEnd"
                            android:textSize="12sp"
                            android:fontFamily="@font/righteous_regular" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:fontFamily="@font/righteous_regular" />


                        <TextView
                            android:id="@+id/txt4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:textColor="@color/black"
                            android:text="40"
                            android:textAlignment="textEnd"
                            android:textSize="12sp"
                            android:fontFamily="@font/righteous_regular" />


                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chartPlantProcess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp" />



        </LinearLayout>

    </ScrollView>

</FrameLayout>